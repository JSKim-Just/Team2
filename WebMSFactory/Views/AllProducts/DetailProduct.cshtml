@model WebMSFactory.ProductListViewModel


@{
    ViewBag.Title = "<" + Model.ProductDetail.Product_Name + ">       상세 정보\n";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewBag.Title</h1>
</div>

<div class="container-fluid">
    <div class="col-sm-12">
        <table class="table table-bordered dataTable">
            <colgroup>
                <col width="150">
                <col width="300">
                <col width="150">
                <col width="300">
                <col width="150">
                <col>
            </colgroup>
            <tbody>
                <tr>
                    <td class="font-weight-bold text-primary">제품 번호</td>
                    <td style="background-color: #fff;">@Model.ProductDetail.Product_ID</td>
                    <td class="font-weight-bold text-primary">제품 그룹명</td>
                    <td style="background-color: #fff;">@Model.ProductDetail.Product_Group_Name</td>
                    <td class="font-weight-bold text-primary">제품명</td>
                    <td style="background-color: #fff;">@Model.ProductDetail.Product_Name</td>
                </tr>
                <tr>
                    <td class="font-weight-bold text-primary">제품 스펙</td>
                    <td style="background-color: #fff;" colspan="3">@Model.ProductDetail.Product_Information</td>
                    <td class="font-weight-bold text-primary">기본 단위</td>
                    <td style="background-color: #fff;">@Model.ProductDetail.Product_Unit</td>
                </tr>
                <tr>
                    <td class="font-weight-bold text-primary">기준량</td>
                    <td style="background-color: #fff;">@Model.ProductDetail.Product_Standards</td>
                    <td class="font-weight-bold text-primary">Tact Time</td>
                    <td style="background-color: #fff;">@Model.ProductDetail.Product_Tact_Time</td>
                    <td class="font-weight-bold text-primary">Lead Time</td>
                    <td style="background-color: #fff;">@Model.ProductDetail.Product_Lead_Time</td>
                </tr>
                <tr>
                    <td class="font-weight-bold text-primary">비고1</td>
                    <td style="background-color: #fff;" colspan="5">@Model.ProductDetail.Product_Note1</td>
                </tr>
                <tr>
                    <td class="font-weight-bold text-primary">비고2</td>
                    <td style="background-color: #fff;" colspan="5">@Model.ProductDetail.Product_Note2</td>
                </tr>

            </tbody>
        </table>
    </div>
</div>

&nbsp;

@if (Model.ForwardBom.Count != 0)
{
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">정전개 목록</h1>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr role="row">
                                <th class="sorting" rowspan="1" colspan="1" width="300px">제품명</th>
                                <th class="sorting" rowspan="1" colspan="1" width="400px">제품 스펙</th>
                                <th class="sorting" rowspan="1" colspan="1" width="100px">제품 수량</th>
                                <th class="sorting" rowspan="1" colspan="1" width="120px">제품 사용 여부</th>
                                <th class="sorting" rowspan="1" colspan="1" width="120px">제품 비고1</th>
                                <th class="sorting" rowspan="1" colspan="1" width="120px">제품 비고2</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var prod in Model.ForwardBom)
                            {
                                if (prod.LV == 0)
                                {
                                    <tr role="row">
                                        <td style="background-color:#EFEFFF">@prod.Product_Name</td>
                                        <td style="background-color:#EFEFFF">@prod.Product_Information</td>
                                        <td style="background-color:#EFEFFF">@prod.Bom_Use_Quantity</td>
                                        <td style="background-color:#EFEFFF">@prod.Product_Use</td>
                                        <td style="background-color:#EFEFFF">@prod.Product_Note1</td>
                                        <td style="background-color:#EFEFFF">@prod.Product_Note2</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr role="row">
                                        <td>@prod.Product_Name</td>
                                        <td>@prod.Product_Information</td>
                                        <td>@prod.Bom_Use_Quantity</td>
                                        <td>@prod.Product_Use</td>
                                        <td>@prod.Product_Note1</td>
                                        <td>@prod.Product_Note2</td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

